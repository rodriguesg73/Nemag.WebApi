@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Base.cshtml";
}
@section Styles {
    @RenderSection("Styles", false)
}
@section Scripts {
    <script src="~/js/pages/_Base/Completo.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>

    @RenderSection("Scripts", false)
}
@section Modals {
    @RenderSection("Modals", false)
}
<div class="ajax-request-progress" style="display: none">
    <div class="middle-box text-center animated fadeInDown">
        <div class="sk-spinner sk-spinner-wandering-cubes">
            <div class="sk-cube1"></div>
            <div class="sk-cube2"></div>
        </div>
    </div>
    <div class="middle-box text-center" style="display: none">
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>

<div class="ajax-request-disconnect" style="display: none">
    <div class="middle-box text-center animated fadeInDown">
        <div>
            <div class="text-center">
                <span style="font-size: 150px;"><i class="fa fa-plug"></i></span>
            </div>
            <div class="text-center">
                <a href="javascript:;" class="btn btn-info" onclick="document.location.reload(true);">Recarregar</a>
                <a href="javascript:;" class="btn btn-info" onclick="$(this).parent().parent().parent().parent().hide();">Fechar</a>
            </div>
        </div>
    </div>
</div>

<div class="bloqueio-acesso" style="display: none">
    <div class="middle-box text-center lockscreen animated fadeInDown">
        <div>
            <form id="formLoginAcessoRenovacaoItem">
                <h3>Usuário não encontrado</h3>
                <div class="alert alert-danger" style="display: none;">
                </div>
                <div class="form-group">
                    <input name="Senha" type="password" class="form-control text-center" style="display: none;" onkeypress="AoPressionarEnter(this, event, RenovarLoginAcessoItem, $(this));" required>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a href="javascript:;" class="btn btn-info" style="display:none;" onclick="RenovarLoginAcessoItem($(this));">Desbloquear</a>
                        <a href="/Login/Index" class="btn btn-info">Efetuar novo login</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="block m-t-xs font-bold login-nome">Nome do Usuário</span>
                            <span class="text-muted text-xs block">Opções <b class="caret"></b></span>
                        </a>
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li><a class="dropdown-item" href="javascript:;" onclick="EfetuarLogout();">Logout</a></li>
                        </ul>
                    </div>
                    <div class="logo-element">
                        IN+
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div id="page-wrapper" class="gray-bg">
        <div class="border-bottom">
            <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i></a>
                    <form role="search" class="navbar-form-custom" method="post" action="#">
                        <div class="form-group">
                            <input type="text" class="form-control" name="top-search" id="top-search" disabled>
                        </div>
                    </form>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li><a href="#"><i class="fa fa-cog"></i></a></li>
                    <li class="dropdown login-notificacao-dropdown-lista">
                        <a class="count-info" href="javascript:;" onclick="ExibirLoginNotificacaoDropdownLista($(this).parent().find('ul'));">
                            <i class="fa fa-bell"></i><span class="label">0</span>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts">
                            <li>
                                <div class="text-center link-block">
                                    <a href="javascript:;" onclick="LimparLoginNotificacaoDropdownLista();" class="dropdown-item">
                                        <i class="fa fa-trash-o"></i>
                                        <strong>LIMPAR NOTIFICAÇÕES</strong>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li><a href="javascript:;" onclick="EfetuarLogout();"><i class="fa fa-sign-out"></i> Logout</a></li>
                </ul>
            </nav>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            @RenderBody()
        </div>
        <div class="footer">
            <div class="pull-left">
                <small class="text-muted"><i class="fa fa-exclamation-triangle" style="color: rgb(255,0,0);"></i></small>
            </div>
            <div class="pull-right">
                <small class="text-muted">@(Nemag.FrontEnd.Global.AppVersion)</small>
            </div>
            <div class="text-center">
                <strong>Copyright</strong>
            </div>
        </div>
    </div>
</div>
