@page
@{
    ViewData["Title"] = "Item";
    Layout = "~/Pages/Shared/Completo.cshtml";
}

@section Scripts{
    <script src="~/plugins/dataTables/1.10.13/js/datatables.min.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/plugins/dataTables/1.10.13/js/dataTables.bootstrap4.min.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/js/pages/_Helper/DataTable.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/js/pages/_Helper/Pesquisa.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/js/pages/Pais/Item.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
}
@section Styles{
    <link href="~/plugins/dataTables/1.10.13/css/datatables.min.css?v=@(Nemag.FrontEnd.Global.AppVersion)" rel="stylesheet">
}
<div class="row">
    <div class="col-lg-12">
        <div class="tabs-container">
            <ul class="nav nav-tabs">
                <li><a class="nav-link active" data-toggle="tab" href="#tab-1"> Informações básicas</a></li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body animated fadeIn">
                        <h3 class="form-title">Informações básicas</h3>
                        <form id="formPaisItem">
                            <input type="hidden" name="Id" value="0" />
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nome:</label>
                                    <input type="text" name="Nome" class="form-control" required />
                                </div>
                                <div class="col-md-3">
                                    <label>Codigo:</label>
                                    <input type="text" name="Codigo" class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label>Continente:</label>
                                    <select class="form-control" name="PaisContinenteId"></select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="pull-right">
            <a href="javascript:;" onclick="Voltar();" class="btn btn-w-m btn-primary">Voltar</a>
            <a href="javascript:;" onclick="SalvarPaisItem();" class="btn btn-w-m btn-primary">Salvar</a>
        </div>
    </div>
</div>
