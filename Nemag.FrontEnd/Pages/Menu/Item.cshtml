@page
@{
    ViewData["Title"] = "Menu de Acesso";
    Layout = "~/Pages/Shared/Completo.cshtml";
}
@section Scripts{
    <script src="~/plugins/dataTables/1.10.13/js/datatables.min.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/plugins/dataTables/1.10.13/js/dataTables.bootstrap4.min.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/js/pages/_Helper/DataTable.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/js/pages/_Helper/Pesquisa.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
    <script src="~/js/pages/Menu/Item.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
}
@section Styles{
    <link href="~/plugins/dataTables/1.10.13/css/datatables.min.css?v=@(Nemag.FrontEnd.Global.AppVersion)" rel="stylesheet">
}
<div class="row">
    <div class="col-md-12">
        <div class="tabs-container">
            <ul class="nav nav-tabs" role="tablist">
                <li><a class="nav-link active" data-toggle="tab" href="#tab-1"> Informações básicas</a></li>
                <li><a class="nav-link" data-toggle="tab" href="#tab-2"> Atribuições</a></li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body animated fadeIn">
                        <h3 class="form-title">Informações básicas</h3>
                        <form id="formMenuItem">
                            <input type="hidden" name="Id" value="0" />
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Titulo</label>
                                    <input type="text" name="Titulo" placeholder="Titulo..." class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label>Menu Superior</label>
                                    <select name="MenuSuperiorId" class="form-control"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Descrição</label>
                                    <textarea type="text" name="Descricao" placeholder="Descrição..." class="form-control" rows="4"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <label>URL</label>
                                    <input type="text" name="WebUrl" placeholder="URL..." class="form-control" required />
                                </div>
                                <div class="col-md-2">
                                    <label>Icone (Font Awesome)</label>
                                    <input type="text" name="IconeCss" placeholder="Icone..." class="form-control" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="tab-2" class="tab-pane">
                    <div class="panel-body animated fadeIn">
                        <h3 class="form-title">Atribuições</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <form id="formMenuPermissaoAtribuicaoLista">
                                    <div class="row titulo text-center">
                                        <div class="col-md-12"><p>Não há registros a serem exibidos</p></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-11">&nbsp;</div>
                            <div class="col-md-1">
                                <button type="button" class="col-md-12 btn btn-primary" onclick="AdicionarMenuPermissaoAtribuicaoItem();"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a href="javascript:;" onclick="Voltar();" class="btn btn-w-m btn-primary">Voltar</a>
            <a href="javascript:;" onclick="ExcluirMenuItem();" class="btn btn-w-m btn-primary">Excluir</a>
            <a href="javascript:;" onclick="SalvarMenuItem();" class="btn btn-w-m btn-primary">Salvar</a>
        </div>
    </div>
</div>