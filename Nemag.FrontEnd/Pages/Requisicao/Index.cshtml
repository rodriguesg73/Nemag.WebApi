@page
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Completo.cshtml";
}
@section Scripts{
    <script src="~/js/pages/Requisicao/Index.js?v=@(Nemag.FrontEnd.Global.AppVersion)"></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="tabs-container">
            <ul class="nav nav-tabs" role="tablist">
                <li><a class="nav-link active" data-toggle="tab" href="#tab-1"> Informações básicas</a></li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body animated fadeIn">
                        <h3 class="form-title">Informações básicas</h3>
                        <form id="formRequisicaoItem">
                            <input type="hidden" name="Id" value="0" />
                            <div class="row">
                                <div class="col-md-4">
                                    <label>URL</label>
                                    <input type="text" name="Url" class="form-control" required />
                                </div>
                                <div class="col-md-4">
                                    <label>Método</label>
                                    <select name="MetodoId" class="form-control">
                                        <option value="Get">GET</option>
                                        <option value="Post">POST</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="form-title text-center">JSON</h3>
                                    <textarea class="form-control" style="height:300px" name="Conteudo"></textarea>
                                </div>
                                <div class="col-md-6">
                                    <h3 class="form-title text-center">Retorno</h3>
                                    <textarea class="form-control" style="height:300px" name="Retorno"></textarea>
                                </div>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-md-2">
                                <a href="javascript:;" onclick="EfetuarRequisicao();" class="btn btn-w-m btn-primary btn-block">
                                    <span><i class="fa arrow"></i>&nbsp;Enviar</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

